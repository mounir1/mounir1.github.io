{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/main.tsx",
    "src/pages/**/*.tsx",
    "src/components/sections/**/*.tsx",
    "src/components/portfolio/**/*.tsx",
    "src/components/ui/**/*.tsx",
    "src/hooks/useProjects.ts",
    "src/hooks/useSkills.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "src/test/**",
    "src/components/admin/**",
    "src/pages/Admin.tsx",
    "src/types/**",
    "src/lib/shared/**",
    "src/utils/rum-monitor.ts",
    "src/components/shared/**",
    "src/lib/ui/**"
  ]
}
